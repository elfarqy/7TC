<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >


    <EditText
        android:id="@+id/Nama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Masukan nama bangun"/>
    <Button
        android:id="@+id/inheritance"
        android:text="Inheritance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nama"
        android:layout_toLeftOf="@+id/namaBangun"
        android:layout_toStartOf="@+id/namaBangun"
        android:layout_marginTop="101dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encapsulasi"
        android:id="@+id/encapsulasi"
        android:layout_alignTop="@+id/inheritance"
        android:layout_toRightOf="@+id/namaBangun"
        android:layout_toEndOf="@+id/namaBangun" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nama bangun datar adalah"
        android:id="@+id/spoiler"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/namaBangun"
        android:layout_below="@+id/spoiler"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lebar"
        android:layout_below="@+id/Nama"
        android:layout_alignRight="@+id/encapsulasi"
        android:layout_alignEnd="@+id/encapsulasi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="masukan ukuran lebar"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panjang"
        android:layout_below="@+id/lebar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="masukan ukuran panjang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lebar bangun datarnya adalah"
        android:id="@+id/spoiler2"
        android:layout_below="@+id/namaBangun"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lebarBangun"
        android:layout_below="@+id/spoiler2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Panjang bangun datarnya adalah"
        android:id="@+id/textView2"
        android:layout_below="@+id/lebarBangun"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/panjangBangun"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/inheritance"
        android:layout_toEndOf="@+id/inheritance"
        android:visibility="invisible"/>

</RelativeLayout>
